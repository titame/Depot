<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
<td><%= line_item.quantity %>&times;</td>
<td><%= truncate(line_item.product.title, length: 8) %></td>
<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
<td><%= link_to 'Remove', destroy_line_item_path(line_item), method: :delete,
data: { confirm: 'Are you sure to remove this item from cart?' } %></td>
</tr>
